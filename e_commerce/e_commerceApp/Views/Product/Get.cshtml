@model ProductViewModel

<section class="py-5">
    <div class="container">
        <div class="row gx-5" id=>
            <aside class="col-lg-6" id=>
                <div class="urun-buyuk-foto border rounded-4 mb-3 d-flex justify-content-center">
                    <a data-fslightbox="mygalley" id="myImage" class="rounded-4 urun-buyuk-foto1" target="_blank"
                        data-type="image" href="">
                        <img id="pic" style="max-width: 100%; max-height: 100vh; margin: auto;" class="rounded-4 fit"
                            src="@Model?.Product.ImageUrl" />
                    </a>
                </div>
                <div class="urun-kucukfotolar d-flex justify-content-center mb-3">
                    <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image"
                        href="" class="item-thumb">
                        <img id="pic1" onmouseover="changeImage('@Model.Product.ImageUrl1',1)" width="60" height="60"
                            class="rounded-2" src="@Model.Product.ImageUrl1" />
                    </a>
                    <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image"
                        href="" class="item-thumb">
                        <img id="pic2" onmouseover="changeImage('@Model.Product.ImageUrl2',2)" width="60" height="60"
                            class="rounded-2" src="@Model.Product.ImageUrl2" />
                    </a>
                    <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image"
                        href="" class="item-thumb">
                        <img id="pic3" onmouseover="changeImage('@Model.Product.ImageUrl3',3)" width="60" height="60"
                            class="rounded-2" src="@Model.Product.ImageUrl3" />
                    </a>
                    <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image"
                        href="" class="item-thumb">
                        <img id="pic4" onmouseover="changeImage('@Model.Product.ImageUrl4',4)" width="60" height="60"
                            class="rounded-2" src="@Model.Product.ImageUrl4" />
                    </a>
                    <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image"
                        href="" class="item-thumb">
                        <img id="pic5" onmouseover="changeImage('@Model.Product.ImageUrl5',5)" width="60" height="60"
                            class="rounded-2" src="@Model.Product.ImageUrl5" />
                    </a>
                </div>

            </aside>
            <main class="col-lg-6">
                <div class="ps-lg-3 ">
                    <h4 class="title text-dark">
                        @Model.Product.ProductName
                    </h4>
                    <a href="">
                        <div class="d-flex flex-row my-3">
                            <div class="text-warning mb-1 me-2">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                                <span class="ms-1">
                                    4.2
                                </span>
                            </div>
                            <a href="#">154 Değerlendirme</a>
                            <p>&nbsp; </p>
                            <p>&nbsp; </p>
                            <p>&nbsp; </p>
                            <span> <i class="fa-regular fa-eye"></i>
                                @Model?.Product.ProductRanking</span>
                            <span class="text-success ms-2">Stok : @Model.Product.Stock</span>

                        </div>
                    </a>

                    <div class="mb-3">
                        <span class="h5">@Model.Product.unitPrice.ToString("c")</span>

                    </div>



                    <div class="row">


                        <dt class="col-3">Renk:</dt>
                        <dd class="col-9">Uzay Mavisi</dd>

                        <dt class="col-3">Materyali:</dt>
                        <dd class="col-9">Titanyum</dd>

                        <dt class="col-3">İşletim Sistemi:</dt>
                        <dd class="col-9">İOS</dd>
                    </div>

                    <hr />

                    <div class="row mb-4">
                        <div class="col-md-4 col-6">
                            <label class="mb-2">Model/Beden</label>
                            <select class="form-select border border-secondary" style="height: 35px;">
                                <option>Pro</option>
                                <option>Pro Max</option>
                                <option>Plus</option>
                            </select>
                        </div>

                        <div class="col-md-4 col-6 mb-3">
                            <label class="mb-2 d-block">Adet</label>
                            <div class="input-group mb-3" style="width: 170px;">
                                <button class="btn btn-white border border-secondary px-3" type="button"
                                    id="button-addon1" data-mdb-ripple-color="dark">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <input type="text" class="form-control text-center border border-secondary"
                                    placeholder="1" aria-label="Example text with button addon"
                                    aria-describedby="button-addon1" />
                                <button class="btn btn-white border border-secondary px-3" type="button"
                                    id="button-addon2" data-mdb-ripple-color="dark">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="btn-group">
                        <a href="" class=" btn btn-warning">
                            <i class="fa-solid fa-credit-card"></i>
                            Buy</a>
                    <form id="@Model.Product.ProductID" asp-page="/cart" method="post">
                        <input type="hidden" asp-for="Product.ProductID" />
                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                        <button type="submit" class="btn btn-outline-secondary rounded-0">
                        <i class="fa fa-cart-plus"></i>
                                  Add To Cart
                          </button>
                    </form>


                    </div>
                </div>
            </main>
        </div>
    </div>
</section>


