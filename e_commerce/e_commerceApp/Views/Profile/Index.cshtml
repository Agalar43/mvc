@model IdentityUser

<div class="row">
    <div class="col-md-2 my-4">

        <partial name="_ProfileSideBar" />

    </div>

    
    <div class="col-md-9 mx-3 my-5  ">
        <div class="card">
            <div class="card-body">
                <form asp-action="Index" method="post">
                    <div class="form-group my-2">
                        <label asp-for="UserName">Username :</label>
                        <input asp-for="UserName" type="text" class="form-control" placeholder="@Model.UserName"
                            required>
                    </div>

                    <div class="form-group my-2">
                        <label asp-for="PhoneNumber">Phone Number:</label>
                        <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="@Model.PhoneNumber"
                            required>
                    </div>

                    <div class="form-group my-2">
                        <label asp-for="Email">E-posta:</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="@Model.Email" required>
                    </div>

                    <button type="submit" class="btn btn-warning my-2">Save</button>
                </form>
            </div>
            <form asp-action="DeleteProfil" method="post" style="margin-left:750px;">
                <button type="submit" class="btn btn-danger">Profile is delete</button>
            </form>
        </div>


    </div>
</div>
<style>
    .card {
        margin-top: 20px;
        border: 1px solid #ced4da;
        border-radius: 8px;
    }
</style>