@model IEnumerable<Order>

<div class="row">

    <div class="col-md-2 my-4">

        <partial name="_ProfileSideBar" />

    </div>

    @if (Model.Count() > 0)
    {
        <div class="col-md-9 mx-3 my-5  ">

            @foreach (Order order in Model)
            {
                <div class="box6">
                    <hr>
                    <i class="bi bi-bag-check-fill"></i>
                    <div class="box8">
                        <h5>Order Date : @order.OrderedAt</h5>
                        <h5> Buyer : @order.Name</h5>
                        <span class="text-danger">@(order.GiftWrap ? "GiftWrap : Yes " : "GiftWrap : No ")</span>
                        <p>
                            <i class="fa fa-address-book text-danger"></i>
                            Address : @order?.address?.CityName / @order?.address?.AddressName /@order?.address?.DistrictName / @order?.address?.ZipCode
                        </p>
                        <h5>
                            <partial name="OrderDetails" model="@order" />
                        </h5><br>
                    </div>
                    <hr>
                </div>
            }

        </div>
    }

    else
    {
        <div class="alert alert-info">
            <p class="lead">There is no order yet</p>
        </div>
    }
</div>