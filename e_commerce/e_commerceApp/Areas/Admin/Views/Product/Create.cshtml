@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create Product</div>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3 ">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3 ">
        <label asp-for="ProductDescription"></label>
        <input asp-for="ProductDescription" class="form-control" />
    </div>
    <div class="form-group my-3 ">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
    </div>
    <div class="form-group my-3 ">
        <label asp-for="unitPrice"></label>
        <input asp-for="unitPrice" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl1"></label>
        <input name="file1" type="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl2"></label>
        <input name="file2" type="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl3"></label>
        <input name="file3" type="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl4"></label>
        <input name="file4" type="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl5"></label>
        <input name="file5" type="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl6"></label>
        <input name="file6" type="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="CategoryID">Category Name</label>
        <select class="form-control" asp-for="CategoryID" asp-items="@ViewBag.Categories">
        </select>
    </div>
    <div class="form-group my-3 ">
        <label >ShowCase</label>
        <input asp-for="ShowCase"/>
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-success" type="submit">
                <i class="fa fa-save"></i>
                Save
            </button>
            <a asp-action="Index" class="btn btn-outline-success">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>